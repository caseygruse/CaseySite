@model IEnumerable<CaseySite.Models.Project>

    <link href="~/Css/ProjectsCss.css" rel="stylesheet">   

<div class="projectFlexContainer">
    @foreach (var item in Model)
    {
    <div id="@item.ProjectId"> @item.ProjectId</div>
    <div class="projectContainer btn btn-primary" data-toggle="modal" data-target="#myModal">
        <div class="projectProp"><p class="projectName">@item.Name</p></div>
        <img src=@item.Photo class="projectProp projectPhoto" width="200" height="200"/>
        <div class="projectProp"><p class="Description">@item.Description</p></div>
    </div>
    }
</div>


<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Modal body..
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


<script src="~/JavaScript/ProjectJS.js"></script>